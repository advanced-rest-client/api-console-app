{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build/default/",
    "rewrites": [{
      "source": "**",
      "destination": "/index.html"
    }, {
      "source": "bower_components/oauth-authorization/oauth-popup.html*",
      "destination": "/bower_components/oauth-authorization/oauth-popup.html"
    }, {
      "source": "bower_components/oauth-authorization/oauth-popup.html",
      "destination": "/bower_components/oauth-authorization/oauth-popup.html"
    }],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
